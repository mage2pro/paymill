<?xml version='1.0'?>
<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='urn:magento:module:Magento_Store:etc/config.xsd'
>
    <default>
		<df_payment>
			<paymill>
				<actionForNew>authorize_capture</actionForNew>
				<actionForReturned>authorize_capture</actionForReturned>
				<askForBillingAddress>1</askForBillingAddress>
<!--
2017-02-05
Which payment currencies does Paymill support? https://mage2.pro/t/2637
-->
				<currency>EUR</currency>
<!--
2017-02-05
По умолчанию пусть будет Visa.
-->
				<prefillWith3DS>4012888888881881</prefillWith3DS>
				<prefillWithout3DS>4111111111111111</prefillWithout3DS>
				<title>Bank Card</title>
				<title_backend>Paymill</title_backend>
			</paymill>
		</df_payment>
        <payment>
            <dfe_paymill>
				<model>Dfe\Paymill\Method</model>
            </dfe_paymill>
        </payment>
    </default>
</config>
